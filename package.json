{
  "name": "stellaris-backend",
  "version": "1.0.0",
  "description": "Backend Express pour la gestion des rendez-vous (Stellaris)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "DEBUG=true nodemon src/server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "luxon": "^3.5.0",
    "nodemailer": "^7.0.11",
    "nodemon": "^3.1.11",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  }
}
